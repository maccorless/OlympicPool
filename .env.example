# Flask Configuration
FLASK_SECRET_KEY=dev-secret-key-for-local-testing-only
FLASK_DEBUG=True
BASE_URL=http://localhost:5000

# Admin Emails (comma-separated)
ADMIN_EMAILS=your@email.com

# Email Service (optional - leave blank for console output in dev)
RESEND_API_KEY=
NO_EMAIL_MODE=True

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SESSION_COOKIE_SECURE=False

# Production Notes:
# - Generate a strong SECRET_KEY for production (min 32 chars)
# - Set FLASK_DEBUG=False in production
# - Set SESSION_COOKIE_SECURE=True in production (requires HTTPS)
# - Add your RESEND_API_KEY and set NO_EMAIL_MODE=False for real emails
# - Update BASE_URL to your production domain
